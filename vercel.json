{
  "version": 2,
  "builds": [
    {
      "src": "camwood-chatbot/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "camwood-chatbot/**"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/camwood-chatbot/:path*"
    }
  ]
}